{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file with Fathom",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}", // Your active file
                "${workspaceFolder}/Fathom/tbprobe.c", // Path to the Fathom source file
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-O3",
                "-march=native",
                "-I${workspaceFolder}/Fathom" // Include path for Fathom header files
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Generated task."
        }
    ],
    "version": "2.0.0"
}

